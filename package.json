{
  "name": "todo",
  "private": true,
  "version": "0.0.1",
  "description": "my todo",
  "main": "electron/main.js",
  "author": "yangliuyiyi",
  "license": "MIT",
  "scripts": {
    "dev": "vite --host --open",
    "build": "vite build",
    "preview": "vite preview",
    "e:dev": "electron .",
    "e:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "naive-ui": "^2.33.5",
    "vue": "^3.2.41"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^3.2.0",
    "electron": "^21.2.3",
    "electron-builder": "^23.6.0",
    "less": "^4.1.3",
    "vite": "^3.2.3"
  },
  "build": {
    "productName": "todo",
    "appId": "top.yangliuyi.todo",
    "copyright": "Copyright Â© 2022 YangLiuYiYi",
    "protocols": {
      "name": "todo",
      "schemes": [
        "todo"
      ]
    },
    "directories": {
      "buildResources": "resources",
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "asar": {
      "smartUnpack": false
    },
    "win": {
      "icon": "public/logo.ico",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "mac": {
      "icon": "public/logo.ico",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "linux": {
      "icon": "public/logo.ico",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "language": "2052",
      "allowToChangeInstallationDirectory": true,
      "differentialPackage": true,
      "installerIcon": "public/logo.ico",
      "uninstallerIcon": "public/logo.ico",
      "installerHeaderIcon": "public/logo.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "todo"
    },
    "dmg": {
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 106,
          "y": 252,
          "name": "todo"
        },
        {
          "x": 490,
          "y": 252,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "todo-v${version}"
    }
  }
}
